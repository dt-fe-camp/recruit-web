{
  "compilerOptions": {
    "target": "ES5",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./src/static/types"],
    "jsx": "react",
    "baseUrl": ".",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@admin/*": ["src/admin/*"]
    }
  },
  "include": [
    "src/app",
    "src/admin",
    "build/*"
  ],
  "exclude": [
    "src/preScript.js"
  ]
}
